@model EmployeeHiringProc.Models.Employee
@{
    ViewData["Title"] = "Create Page";
}
<a asp-action="Index" asp-controller="Employee">Go Back</a>
<br />
<br />
<div>
    <h2 class="display-5">Add Employee</h2>
    <br />
</div>


<div class="row">
    <div class="col-lg-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <p>
                <b><label asp-for="FirstName" class="form-label"></label> </b>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="LastName" class="form-label"></label> </b>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="Email" class="form-label"></label> </b>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="Dob" class="form-label"></label> </b>
                <input asp-for="Dob" class="form-control" />
                <span asp-validation-for="Dob" class="text-danger"></span>
            </p>
            <p>
                <b><label asp-for="Address" class="form-label"></label> </b>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </p>
                  <p>
                <b><label asp-for="FieldOfStudy" class="form-label"></label> </b>
                <input asp-for="FieldOfStudy" class="form-control" />
                <span asp-validation-for="FieldOfStudy" class="text-danger"></span>
            </p>
                  <p>
                <b><label asp-for="CurrentEmployer" class="form-label"></label> </b>
                <input asp-for="CurrentEmployer" class="form-control" />
                <span asp-validation-for="CurrentEmployer" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="AreasOfExpertise" class="form-label"></label> </b>
                <input asp-for="AreasOfExpertise" class="form-control" />
                <span asp-validation-for="AreasOfExpertise" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="CurrentEmployer" class="form-label"></label> </b>
                <input asp-for="CurrentEmployer" class="form-control" />
                <span asp-validation-for="CurrentEmployer" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="UploadFile" class="form-label"></label> </b>
                <input asp-for="UploadFile" class="form-control" />
                <span asp-validation-for="UploadFile" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="Certificate" class="form-label"></label> </b>
                <input asp-for="Certificate" class="form-control" />
                <span asp-validation-for="Certificate" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="GenderId" class="form-label"></label> </b>
                <select asp-for="GenderId" asp-items="ViewBag.EGender" class="form-control">
                    <option>Select Gender</option>
                </select>
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="GradeId" class="form-label"></label> </b>
                <select asp-for="GradeId" asp-items="ViewBag.EGrade" class="form-control">
                    <option>Select Grade</option>
                </select>
                <span asp-validation-for="GradeId" class="text-danger"></span>
            </p>
                    <p>
                <b><label asp-for="SubjectId" class="form-label"></label> </b>
                <select asp-for="SubjectId" asp-items="ViewBag.ESubject" class="form-control">
                    <option>Select Subject</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </p>
                    <p>
                <b><label asp-for="DegreeId" class="form-label"></label> </b>
                <select asp-for="DegreeId" asp-items="ViewBag.EDegree" class="form-control">
                    <option>Select Degree</option>
                </select>
                <span asp-validation-for="DegreeId" class="text-danger"></span>
            </p>
                    <p>
                <b><label asp-for="ExperienceId" class="form-label"></label> </b>
                <select asp-for="ExperienceId" asp-items="ViewBag.EExperiences" class="form-control">
                    <option>Select Experience</option>
                </select>
                <span asp-validation-for="ExperienceId" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="ExperienceIdAdd" class="form-label"></label> </b>
                <select asp-for="ExperienceIdAdd" asp-items="ViewBag.EExperiencesAdds" class="form-control">
                    <option>Select Experience Additional </option>
                </select>
                <span asp-validation-for="ExperienceIdAdd" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="AvailId" class="form-label"></label> </b>
                <select asp-for="AvailId" asp-items="ViewBag.EAvail" class="form-control">
                    <option>Select Availibility</option>
                </select>
                <span asp-validation-for="AvailId" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="TeachingLvlsId" class="form-label"></label> </b>
                <select asp-for="TeachingLvlsId" asp-items="ViewBag.ETeaching" class="form-control">
                    <option>Select Teaching Levels</option>
                </select>
                <span asp-validation-for="TeachingLvlsId" class="text-danger"></span>
            </p>

            <p>
                <b><label asp-for="ImageFile" class="form-label"></label> </b>
                <input type="file" name="image" class="form-control" />
            </p>

      

            <p><button type="submit" class="btn btn-primary">Add Employee</button></p>
        </form>
    </div>

    <br />

    @if (ViewBag.msg != null)
    {
        <p>@ViewBag.msg</p>
    }
</div>